{
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "downlevelIteration": true,
        "strictNullChecks": false
        
    },
    "include": [
        "./src/**/*",
        "./src/*"
    ]
}